{
  "name": "annotationlib",
  "version": "1.0.0",
  "description": "YouTube annotation parser and renderer",
  "main": "index.js",
  "scripts": {
    "build:parser": "rollup src/parser/index.js --file dist/AnnotationParser.js",
    "build:renderer": "rollup src/renderer/index.js --file dist/AnnotationRenderer.js && cleancss -o dist/AnnotationRenderer.css src/renderer/index.css",
    "minify:parser": "terser --compress --mangle -o dist/AnnotationParser.js -- dist/AnnotationParser.js",
    "minify:renderer": "terser --compress --mangle -o dist/AnnotationRenderer.js -- dist/AnnotationRenderer.js",
    "build": "npm run build:parser && npm run build:renderer",
    "minify": "npm run minify:parser && npm run minify:renderer",
    "release": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afrmtbl/annotationlib.git"
  },
  "keywords": [
    "youtube",
    "annotations"
  ],
  "author": "afrmtbl",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/afrmtbl/annotationlib/issues"
  },
  "homepage": "https://github.com/afrmtbl/annotationlib#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.1",
    "rollup": "^2.79.0",
    "terser": "^5.15.0"
  }
}
